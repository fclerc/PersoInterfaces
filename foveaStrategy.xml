<?xml version="1.0" encoding="UTF-8"?>
<strategyRules>
	<exploitedProfile>foveaProfile.xml</exploitedProfile>
	<exploitedContext>foveaContext.xml</exploitedContext>
	<OKEP>foveaOKEP.xml</OKEP>
	<pedagogicalProperties>foveaPedagogicalProperties.xml</pedagogicalProperties>
	<rule id="R1">
		<priority>3</priority>
		<if><!--  You can use <and> <or> to combine conditions  -->
			<constraint>            
                <indicator>LP25</indicator>
                <operator>=</operator> <!--  Also >   <    !=   -->
                <referencevalue>absent</referencevalue>
            </constraint>
		</if>
		<then>
			<activities>
				<activity>
					<typeofactivity>A002</typeofactivity>
					<parameters>
						<parameter>
							<id>P005</id>
							<value>Twitter</value>
						</parameter>
					</parameters>
				</activity>
			</activities>
		</then>
		<else>
			<!-- optional - same organization as <then> -->
			<activities>
				<activity>
					<typeofactivity>A004</typeofactivity>
					<parameters>
						<parameter>
							<id>P012</id>
							<value>Greeting</value>
						</parameter>
					</parameters>
				</activity>
			</activities>
		</else>
	</rule>
    <rule id="R2">
		<priority>3</priority>
		<if><!--  You can use <and> <or> to combine conditions  -->
            <constraint>
                <indicator>LP3</indicator>
                <operator>=</operator> <!--  Also >   <    !=   -->
                <referencevalue>ref</referencevalue>
            </constraint>
		</if>
		<then>
			<activities>
				<activity>
					<typeofactivity>A002</typeofactivity>
					<parameters>
						<parameter>
							<id>P005</id>
							<value>Twitter</value>
						</parameter>
					</parameters>
				</activity>
			</activities>
		</then>
		<else>
			<!-- optional - same organization as <then> -->
			<activities>
				<activity>
					<typeofactivity>A002</typeofactivity>
					<parameters>
						<parameter>
							<id>P005</id>
							<value>Google+</value>
						</parameter>
					</parameters>
				</activity>
			</activities>
		</else>
	</rule>
    <rule id="R4"><if><indicator>LP2</indicator></if></rule>
<rule xmlns="http://www.w3.org/1999/xhtml" id="R3"><if><indicator>LP2</indicator></if></rule></strategyRules>
